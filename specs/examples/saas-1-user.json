{
    "name": "user",
    "description": "User management system",
    "models": {
        "User": {
            "name": {
                "type": "string",
                "required": true
            },
            "email": {
                "type": "string",
                "required": true
            },
            "bio": {
                "type": "string",
                "required": false
            }
        }
    },
    "actions": {
        "createUser": {
            "description": "Register a new user",
            "input": {
                "name": {
                    "type": "string",
                    "required": true
                },
                "email": {
                    "type": "string",
                    "required": true
                },
                "bio": {
                    "type": "string",
                    "required": false
                }
            },
            "output": {
                "kind": "model",
                "modelName": "User"
            }
        },
        "listUsers": {
            "description": "Get all users",
            "output": {
                "kind": "model",
                "modelName": "User",
                "isArray": true
            }
        }
    }
}