{
    "name": "project_tag",
    "description": "Project Management - Junction Table (Backend Only)",
    "skipUI": true,
    "models": {
        "ProjectTag": {
            "project": {
                "type": "relation",
                "target": "Project",
                "relationType": "belongsTo",
                "required": true
            },
            "tag": {
                "type": "relation",
                "target": "Tag",
                "relationType": "belongsTo",
                "required": true
            }
        },
        "Project": {
            "tags": {
                "type": "relation",
                "target": "ProjectTag",
                "relationType": "hasMany"
            }
        },
        "Tag": {
            "projects": {
                "type": "relation",
                "target": "ProjectTag",
                "relationType": "hasMany"
            }
        }
    },
    "actions": {
        "link": {
            "description": "Link a tag to a project",
            "input": {
                "projectId": {
                    "type": "string",
                    "required": true
                },
                "tagId": {
                    "type": "string",
                    "required": true
                }
            },
            "output": {
                "kind": "model",
                "modelName": "ProjectTag"
            }
        }
    }
}